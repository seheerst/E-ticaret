@model RegisterModel



<!DOCTYPE html>

<div class="container pb-5 mt-5">

    <h2>Yeni Kullanıcı</h2>
    <hr/>

    @* @Html.AntiForgeryToken() *@
    <form class="form-horizontal" asp-action="Register" method="post">
        <h4>Product</h4>
        <hr/>
        <div class="form-group">
            <label asp-for="Name" class="form-label"></label>
            <input class="form-control" asp-for="Name"/>
        </div>
        <div class="form-group">
            <label asp-for="SurName" class="form-label"></label>
            <input class="form-control" asp-for="SurName"/>
        </div>
        <div class="form-group">
            <label asp-for="UserName" class="form-label"></label>
            <input class="form-control" asp-for="UserName"/>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="form-label"></label>
            <input class="form-control" asp-for="Email"/>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="form-label"></label>
            <input class="form-control" asp-for="Password" type="password"/>
        </div>

        <div class="form-group" style="display: inline">
            <label asp-for="Repassword" class="form-label"> IsHome</label>
            <input asp-for="Repassword" class="form-control" type="password"/>
        </div>

        <button class="btn btn-outline-warning" type="submit"> Oluştur</button>
    </form>

</div>