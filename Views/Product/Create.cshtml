@model Product

@{
    ViewBag.Title = "Create";
    Layout = "_AdminLayout";
}

<div class="container pb-5 mt-5">

    <h2>Yeni Ürün</h2>
    <hr/>


    <form class="form-horizontal" asp-action="Create" method="post">
        <h4>Product</h4>
        <hr/>
        <div class="form-group">
            <label asp-for="Name" class="form-label"> Name</label>
            <input class="form-control" asp-for="Name"/>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="form-label"> Description</label>
            <input class="form-control" asp-for="Description"/>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="form-label"> Price</label>
            <input class="form-control" asp-for="Price"/>
        </div>

        <div class="form-group">
            <label asp-for="Image" class="form-label"> Image</label>
            <input class="form-control" asp-for="Image"/>
        </div>
        <div class="form-group">
            <label asp-for="Stock" class="form-label"> Stock</label>
            <input class="form-control" asp-for="Stock"/>
        </div>

        <div class="form-group" style="display: inline">
            <label asp-for="IsHome" class="form-label"> IsHome</label>
            <input asp-for="IsHome" class="form-check"/>
        </div>

        <div class="form-group">
            <label asp-for="IsApproved" class="form-label"> IsProved</label>
            <input asp-for="IsApproved" class="form-check"/>
        </div>
        <div class="mb-3">
            <label asp-for="Category" class="form-label">Category</label>
            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
                <option value=""> Select</option>
            </select>
        </div>

        <button class="btn btn-outline-warning" type="submit"> Kaydet</button>
    </form>

</div>